# Forgejo Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
FORGEJO_DB_NAME=forgejo
FORGEJO_DB_USER=forgejo
FORGEJO_DB_PASSWORD=forgejo_secure_password_change_me

# Application Configuration
FORGEJO_DOMAIN=forgejo.local
FORGEJO_HTTP_PORT=3000
FORGEJO_SSH_PORT=2222
FORGEJO_PROXY_PORT=8080

# Security
FORGEJO_SECRET_KEY=generate_a_random_secret_key_here

# Runner Configuration
FORGEJO_RUNNER_TOKEN=your_runner_registration_token_here

# Storage Path (relative to project root or absolute)
FORGEJO_STORAGE_PATH=./forgejo/data

