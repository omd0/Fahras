# Application Configuration
# Note: These values can be overridden by organization-config.yml
# See ORGANIZATION_CONFIG_README.md for details
APP_NAME="Fahras"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Riyadh
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5433
DB_DATABASE=fahras
DB_USERNAME=fahras
DB_PASSWORD=fahras_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# SMTP Mail Configuration
# Gmail SMTP settings:
# IMPORTANT: For Gmail, you MUST use an App Password, not your regular password!
# 1. Enable 2-Step Verification on your Google account
# 2. Generate an App Password at: https://myaccount.google.com/apppasswords
# 3. Use that App Password (16 characters) for MAIL_PASSWORD
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=yourgmail@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_ENCRYPTION=tls
# Email Configuration
# Note: Default values come from organization-config.yml
MAIL_FROM_ADDRESS=noreply@fahras.tvtc.gov.sa
MAIL_FROM_NAME="Fahras System"

# After updating these values, clear the config cache:
# docker compose exec php php artisan config:clear
# OR if running locally: php artisan config:clear

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
