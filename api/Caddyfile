:{$PORT:80} {
    root * /app/public

    # Reverse proxy to PHP built-in server
    reverse_proxy localhost:9000

    encode gzip

    header {
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options nosniff
        Referrer-Policy no-referrer-when-downgrade
        -Server
    }

    log {
        output stdout
        format console
    }
}
