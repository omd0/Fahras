# ==============================================================================
# Fahras — Environment Configuration
# ==============================================================================

# --- App Config ---------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="Fahras"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# --- Database (PostgreSQL) with Prisma ----------------------------------------
DATABASE_URL="postgresql://fahras:fahras_password@localhost:5432/fahras?schema=public"

# --- Auth (NextAuth v5) -------------------------------------------------------
# Generate AUTH_SECRET with: openssl rand -base64 32
AUTH_SECRET="generate-with-openssl-rand-base64-32"
AUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# --- Storage (AWS S3 / MinIO) -------------------------------------------------
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_REGION=us-east-1
AWS_BUCKET=fahras-files
# For MinIO (development): http://minio:9000
# For AWS S3 (production): https://s3.amazonaws.com
AWS_ENDPOINT=http://localhost:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# --- Email Configuration (optional) -------------------------------------------
EMAIL_FROM=noreply@fahras.local
EMAIL_FROM_NAME="Fahras System"

# --- Redis (optional — for rate limiting / sessions) --------------------------
REDIS_URL=redis://localhost:6379

# --- AI Services (optional) ---------------------------------------------------
# OPENAI_API_KEY=sk-...
# AI_SEARCH_ENABLED=false
